li.user(class=(item._id == currentUser._id ? 'active' : ''))
    .col
        .title=item.uname
    .col
        .minor=item.role
    .buttons
        .button.hover(data-title='View' data-href='/u/a/'+item._id)
            i.fa.fa-eye
        if currentUser && currentUser.role == 'admin'
            .button.hover(data-title='Edit' data-href='/u/a/'+item._id+'/e')
                i.fa.fa-cog
            .button.hover(data-title='Delete' data-href='/u/a/'+item._id+'/d')
                i.fa.fa-trash