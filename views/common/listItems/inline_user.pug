li.user(class=(item._id == user._id ? 'active' : ''))
    .col
        .title=item.displayName
    .col
        .minor=item.role
    .buttons
        .button.hover(data-title='View' data-href='/u/'+item._id)
            i.fa.fa-eye
        if user && user.admin
            .button.hover(data-title='Edit' data-href='/u/'+item._id)
                i.fa.fa-cog
            .button.hover(data-title='Delete' data-href='/u/'+item._id+'/d')
                i.fa.fa-trash