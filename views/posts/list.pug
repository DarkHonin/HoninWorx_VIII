extends ../template.pug

block styles
    link(rel="stylesheet", href="/stylesheets/style2.css")
block content
    article
     .container
            .head
                .title Posts
                .buttons
                    .button.hover#newPost(data-title='New Post')
                        i.fas.fa-star
            ul.list.body
                for i in list
                    li.post
                        .col.username=i.title
                        .buttons
                            .button.hover(data-title='View' data-href='/p/'+i._id)
                                i.fa.fa-eye
                            .button.hover(data-title='Edit' data-href='/p/'+i._id+'/e')
                                i.fa.fa-cog
                            .button.hover(data-title='Delete' data-href='/p/'+i._id+'/d')
                                i.fa.fa-trash
                        
block scripts
    script(src="/javascripts/common.js")
    script(src="/javascripts/search.js")
    script(src="/javascripts/list.js")
    script(src="/javascripts/edit.js")