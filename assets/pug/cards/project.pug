    - var note = 'Some text here describing the project, character limit is debateable but will see'
    - var backgroundImage = '../../img/post.jpg'
    - var cardClass = ''

block body
    .el.note
        header.title
            span Note
        p.body=note
block footer
    .el.meta
        .body
            span.date(data-title='Updated')
                span.body 10:40 AM 11/19/2020
    .el.link
        a.body(href='./project.html', title=`View project${articleHeading}`)
            i.fas.fa-eye
        span.body(title='Projects: 33')
            i.fas.fa-book
